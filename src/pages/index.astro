---
import '../styles/global.css';

const featuredApps = [
	{
		name: "Clash of Cards: War",
		description: "Can you win the war? A new twist on the classic card game of war!",
		android: "https://play.google.com/store/apps/details?id=io.bwvolleyball.cards.war",
		ios: "coming-soon",
		image: "/images/dig-turtle.png"
	},
	// Add more apps here as they become available
];
---

<!DOCTYPE html>
<html lang="en" class="bg-gray-900">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Dig Turtle - Fun Mobile Games</title>
		<meta name="description" content="Dig Turtle and Filicode - Creating engaging mobile games for everyone" />
		<!-- Social Media Icons -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
	</head>
	<body class="min-h-screen flex flex-col items-center justify-center p-4 text-white">
		<main class="max-w-4xl mx-auto text-center">
			<h1 class="text-6xl font-bold mb-6 bg-gradient-to-r from-purple-400 to-pink-600 text-transparent bg-clip-text">
				Dig Turtle & Filicode
			</h1>
			
			<p class="text-2xl mb-8 text-gray-300">
				Fun mobile games for everyone
			</p>

			<div class="space-y-8">
				<div class="bg-gray-800 p-8 rounded-xl shadow-2xl">
					<h2 class="text-3xl font-bold mb-4">Featured Apps</h2>
					<div class="grid gap-6">
						{featuredApps.map(app => (
							<div class="bg-gray-700 p-6 rounded-lg">
								<h3 class="text-2xl font-bold mb-2">{app.name}</h3>
								<p class="text-gray-300 mb-4">{app.description}</p>
								<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
									<a href={app.android} class="transform hover:scale-105 transition-transform">
										<img 
											src="https://play.google.com/intl/en_us/badges/static/images/badges/en_badge_web_generic.png" 
											alt="Get it on Google Play" 
											class="h-16"
										/>
									</a>
									{app.ios === "coming-soon" ? (
										<div class="relative group">
											<img 
												src="https://developer.apple.com/app-store/marketing/guidelines/images/badge-download-on-the-app-store.svg"
												alt="Download on the App Store" 
												class="h-12 opacity-50"
											/>
											<span class="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-700 px-3 py-1 rounded text-sm opacity-0 group-hover:opacity-100 transition-opacity">
												Coming Soon!
											</span>
										</div>
									) : (
										<a href={app.ios} class="transform hover:scale-105 transition-transform">
											<img 
												src="https://developer.apple.com/app-store/marketing/guidelines/images/badge-download-on-the-app-store.svg"
												alt="Download on the App Store" 
												class="h-12"
											/>
										</a>
									)}
								</div>
							</div>
						))}
					</div>
				</div>

				<div class="bg-gradient-to-r from-purple-900 to-pink-900 p-8 rounded-xl">
					<h2 class="text-2xl font-bold mb-4">Join the Community</h2>
					<div class="flex justify-center gap-6 text-3xl mb-4">
						<a href="#" class="hover:text-purple-400 transition-colors"><i class="fab fa-twitter"></i></a>
						<a href="#" class="hover:text-purple-400 transition-colors"><i class="fab fa-discord"></i></a>
						<a href="#" class="hover:text-purple-400 transition-colors"><i class="fab fa-instagram"></i></a>
					</div>
					<p class="text-lg">
						Follow us for updates and new game announcements
					</p>
				</div>
			</div>
		</main>

		<footer class="mt-16 text-gray-400 text-sm">
			<p>Â© 2025 Dig Turtle & Filicode. All rights reserved. | <a href="/privacy-policy" class="hover:text-purple-400">Privacy Policy</a> | <a href="/terms-of-service" class="hover:text-purple-400">Terms of Service</a></p>
		</footer>
	</body>
</html>
